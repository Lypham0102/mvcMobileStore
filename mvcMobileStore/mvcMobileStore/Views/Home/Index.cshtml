@model IEnumerable<mvcMobileStore.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
        @foreach (var sanpham in Model)
        {

            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <a href="@Url.Action("Details","MobileStore", new { id = sanpham.MASP})">
                        <img alt="@sanpham.TENSP" src="~/Hinhsanpham/@sanpham.AnhSP" width="400" />
                        <div>
                            <br />
                            <h4 style="text-align: center"> @sanpham.TENSP </h4>
                            <p></p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">Comment</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                </div>
            </div>

        }
    </div>

